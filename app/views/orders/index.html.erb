<div class="container">
  <h1 class="text-center">Orders</h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order Placed</th>
          <th>Order Number</th>
          <th>Status</th>
          <th>Order Total</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%b %d, %Y") %></td>
            <td><%= order.id %></td>
            <td><%= order.status %></td>
            <td>$<%= order.total %></td>
            <td>
              <a href="#" class="">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true">
                </span>
                View Order Details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <%= link_to "Continue Shopping", products_path, class: "btn btn-lg btn-primary pull-left" %> 
  <%= link_to "Dashboard", dashboard_path, class: "btn btn-lg btn-success pull-right" %>
</div><!-- /.container -->
