<div class="container">
  <h1 class="text-center">Order Details</h1>

  <div class="row">
    <h5 class="col-md-3"><strong>Order ID: </strong># <%= @order.id %></h5>
    <h5 class="col-md-4 col-md-offset-5"><strong>Purchase Date/Time: </strong>
      <%= @order.created_at.strftime("%B %e, %Y at %l:%M %p") %>
    </h5>
  </div>
  <br/>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Product Details</th>
          <th>Status</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr>
            <td>
              <a href="<%= product_path(order_item.product) %>">
                <%= order_item.product.name %>
              </a>
            </td>
            <td><%= @order.status %></td>
            <td><%= order_item.quantity %></td>
            <td><%= number_to_currency(order_item.unit_price) %></td>
            <td><%= number_to_currency(order_item.subtotal) %></td>
          </tr>
        <% end %>
        <tr>
          <td colspan=3></td>
          <th>Total</th>
          <th class="total"><%= number_to_currency(@order.total) %></th>
        </tr> 
      </tbody>
    </table>

    <% if @order.status == "cancelled" || @order.status == "completed" %>
      <div class="other-notes well">
        <h5><strong>Other Notes:</strong></h5>
        <p>
          This order was <%= @order.status %> 
          on <%= @order.updated_at.strftime("%B %e, %Y at %l:%M %p")%>.
        </p>
      </div>
    <% end %>

  </div>
  <%= link_to "Continue Shopping", products_path,
    class: "btn btn-lg btn-primary pull-left" %> 
  <%= link_to "Dashboard", dashboard_path,
    class: "btn btn-lg btn-success pull-right" %>
</div><!-- /.container -->
