<div class="col-lg-12">
  <h2 class="page-headed">Farmer of the Week</h2>
</div>
<div class="col-md-3">
  <%= link_to image_tag(@featured_farmer.photo_url, class: "img-responsive",
  alt: "#{@featured_farmer.farm_name} image"), "/#{@featured_farmer.url}"  %>
</div>
<div class="featured-farmer col-md-6">
  <h3> <%= link_to "#{@featured_farmer.farm_name}", "/#{@featured_farmer.url}" %> </h3>
  <p>
    <%= @featured_farmer.description %>
  </p>
  <blockquote class="blockquote-reverse blockquote-small">
    <p>
      "The <%= @featured_farmer.farm_name %> grow the sweetest and freshest corn we have ever eaten!"
    </p>
    <footer>The Smiths</footer>
  </blockquote>
</div>
<div class="col-md-3">
  <div id="plants-panel" class="panel panel-success">
    <div class="panel-heading">
      <h4>Are you a Farmer?</h4>
    </div>
    <div class="panel-body">
      <p>
        Sign up and start selling today!
      </p>
      <%= link_to "Join Today!", "/store/account/new",
                  class: "btn btn-block btn-danger" %>
    </div>
  </div>
</div>
