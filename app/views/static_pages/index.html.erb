<!-- Header -->
<header>
  <div class="main-image">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            Welcome to <br> Farmers' Market
          </h1>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Page Content -->
<div class="container">
  <br>
  <div class="well">
    <div class="row">
      <div class="col-md-8">
        <h4>Receive free coupons, free shipping, and a T-Shirt!</h4>
      </div>
      <div class="col-md-4">
        <%= link_to "Become a Local Farmer MVP", account_new_path,
            class: "btn btn-lg btn-success btn-block"%>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <div id="food-panel" class="panel panel-primary">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-check"></i>Farmers</h4>
        </div>
        <div class="panel-body" id="index-farmer">
          <%= link_to "View All", "/categories/food",
                      class: "btn btn-danger" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div id="plants-panel" class="panel panel-primary">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-gift"></i>Food</h4>
        </div>
        <div class="panel-body" id="index-food">
          <%= link_to "Shop Now", "/categories/plants",
                      class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div><!-- /.row -->
  <!-- Featured Products Section -->
  <div class="row">
    <%= render "partials/product_carousel" %>
  </div>
  <!-- Farmer of the Week Section -->
  <div class="row">
    <%= render "partials/farmer_of_the_week" %>
  </div>
  <hr>
</div><!-- /.container -->
